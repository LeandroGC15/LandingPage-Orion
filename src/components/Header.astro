---
import { Phone, Mail, MapPin } from 'lucide-react';
import ThemeToggle from './ThemeToggle.jsx';
---

<div class="bg-white dark:bg-gray-900 text-gray-600 dark:text-gray-300 py-2 px-4 md:px-8 text-sm hidden md:flex justify-between items-center transition-colors">
  <div class="flex items-center space-x-6">
    <div class="flex items-center">
      <Phone className="h-4 w-4 mr-2" />
      <span>(+1) 234-567-8901</span>
    </div>
    <div class="flex items-center">
      <MapPin className="h-4 w-4 mr-2" />
      <span>Silicon Valley, California, USA</span>
    </div>
    <div class="flex items-center">
      <Mail className="h-4 w-4 mr-2" />
      <span>info@orion.dev</span>
    </div>
  </div>
  <div class="flex items-center space-x-3">
    <a href="#" class="hover:text-primary">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
      </svg>
    </a>
    <a href="#" class="hover:text-primary">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
        <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
      </svg>
    </a>
    <a href="#" class="hover:text-primary">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
        <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
      </svg>
    </a>
    <ThemeToggle client:load />
  </div>
</div>

<header class="bg-white dark:bg-gray-900 sticky top-0 z-50 shadow-sm transition-colors">
  <div class="container mx-auto px-4 md:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <div class="relative h-10 w-32">
            <div class="absolute inset-0 gradient-bg rounded-r-full w-15 h-10"></div>
            <div class="absolute left-4 top-1/2 transform -translate-y-1/2 text-white font-bold text-xl">
              orion<span class="text-blue-200">.dev</span>
            </div>
            <div class="absolute left-4 bottom-0 text-white text-[8px]">Software Development</div>
          </div>
        </a>
      </div>

      <div class="hidden md:flex items-center space-x-1">
        <nav class="flex items-center space-x-1">
          <a href="#" class="px-3 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark flex items-center">
            Home
          </a>
          <a href="#" class="px-3 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark flex items-center">
            Services
          </a>
          <a href="#" class="px-3 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark flex items-center">
            Portfolio
          </a>
          <a href="#" class="px-3 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark flex items-center">
            About
          </a>
          <a href="#" class="px-3 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark flex items-center">
            Blog
          </a>
          <a href="#" class="px-3 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark flex items-center">
            Contact
          </a>
        </nav>

        <div class="flex items-center ml-4 space-x-2">
          <div class="relative">
            <input
              type="text"
              placeholder="Search..."
              class="py-1 pl-3 pr-8 rounded-md text-sm border border-gray-300 dark:border-gray-700 focus:outline-none focus:ring-1 focus:ring-primary dark:bg-gray-800 dark:text-gray-200"
            />
            <svg xmlns="http://www.w3.org/2000/svg" class="absolute right-2 top-1/2 transform -translate-y-1/2 h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </div>
          <a href="#contact" class="gradient-bg text-white rounded-full text-sm px-4 py-2 transition-transform hover:scale-105">
            Contactar ahora
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden flex items-center">
        <button id="mobile-menu-button" class="text-gray-600 dark:text-gray-300 hover:text-primary dark:hover:text-primary-dark">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="md:hidden hidden py-2 pb-4">
      <nav class="flex flex-col space-y-2">
        <a href="#" class="px-4 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark">Home</a>
        <a href="#" class="px-4 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark">Services</a>
        <a href="#" class="px-4 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark">Portfolio</a>
        <a href="#" class="px-4 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark">About</a>
        <a href="#" class="px-4 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark">Blog</a>
        <a href="#" class="px-4 py-2 text-sm font-medium hover:text-primary dark:hover:text-primary-dark">Contact</a>
      </nav>
      <div class="mt-4 px-4">
        <a href="#contact" class="gradient-bg text-white rounded-full text-sm px-4 py-2 block text-center">
          Contactar ahora
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Toggle mobile menu
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>